<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="200"
		Background="Transparent"
		AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded">
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="130"/>


	</WindowChrome.WindowChrome>

	<Border CornerRadius="360" BorderBrush="DarkGoldenrod" BorderThickness="5" Background="#2d2d30">
		<StackPanel  >
			<Label  Content="Digit Clock" FontSize="13" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#fdfd66"/>
			<StackPanel  >
				<Label Name="Timelbl"  Content="00:00:00" FontSize="30" Margin="0,10,0,10" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#fdfd66"/>
			</StackPanel>
			<StackPanel  >
				<Label Name="Datelbl" Content="0000,00,00" FontSize="15"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#fdfd66"/>
			</StackPanel>
			<Button ToolTip="Quit" Content="Quit" Click="Quit" Width="60"  Background="#fdfd66" Margin="0,10,0,0"/>
		</StackPanel>
	</Border>
	
	    
	
</Window>
